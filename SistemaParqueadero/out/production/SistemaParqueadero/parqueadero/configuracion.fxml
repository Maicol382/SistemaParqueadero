<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="parqueadero.ConfiguracionController"
      spacing="30" alignment="TOP_CENTER"
      style="-fx-padding: 40; -fx-background-color: #f8fbff;">

    <Label text="ConfiguraciÃ³n del Parqueadero"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1565C0;"/>

    <GridPane hgap="20" vgap="18" alignment="CENTER_LEFT">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <Label text="Total de espacios:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTotalEspacios" prefWidth="180" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Espacios reservados para mensualidad:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEspMensual" prefWidth="180" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Tarifa por hora (COP):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTarifaHora" prefWidth="180" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Tarifa por minuto (COP):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTarifaMinuto" prefWidth="180" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="25" alignment="CENTER">
        <Button text="Volver" onAction="#volverDashboard"
                style="-fx-background-color: #666; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="GUARDAR CAMBIOS" onAction="#guardar"
                style="-fx-background-color: #2E7D32; -fx-text-fill: white;
                       -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-width: 220;"/>
    </HBox>
</VBox>