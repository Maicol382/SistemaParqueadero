<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="parqueadero.SalidaController"
            prefWidth="1100" prefHeight="700">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #E3F2FD; -fx-padding: 12;">
            <Button text="Volver" onAction="#volverDashboard"
                    style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="30" alignment="TOP_CENTER" style="-fx-padding: 40;">
            <Label text="Registrar Salida de Vehículo"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #D32F2F;"/>

            <HBox spacing="20" alignment="CENTER">
                <TextField fx:id="txtPlaca" prefWidth="300" promptText="Ingrese la placa"/>
                <Button text="BUSCAR Y COBRAR" onAction="#registrarSalida"
                        style="-fx-background-color: #D32F2F; -fx-text-fill: white;
                               -fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-pref-width: 200; -fx-pref-height: 45;"/>
            </HBox>

            <Label fx:id="lblMensaje"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15;
                          -fx-background-color: #E8F5E8; -fx-background-radius: 10;"/>

            <VBox spacing="15">
                <Label text="Vehículos Actualmente en el Parqueadero"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1565C0;"/>
                <TableView fx:id="tablaActivos" prefHeight="350">
                    <columns>
                        <TableColumn text="Placa" prefWidth="150">
                            <cellValueFactory><PropertyValueFactory property="placa"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Hora Ingreso" prefWidth="180">
                            <cellValueFactory><PropertyValueFactory property="ingreso"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Espacio" prefWidth="100">
                            <cellValueFactory><PropertyValueFactory property="espacio"/></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Tipo Pago" prefWidth="140">
                            <cellValueFactory><PropertyValueFactory property="tipoPago"/></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>