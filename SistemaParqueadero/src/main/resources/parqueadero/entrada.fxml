<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="parqueadero.EntradaController"
            prefWidth="1100" prefHeight="700">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-background-color: #E3F2FD; -fx-padding: 12;">
            <Button text="Volver" onAction="#volverDashboard"
                    style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="30" alignment="TOP_CENTER" style="-fx-padding: 40;">
            <Label text="Registrar Ingreso de Vehículo"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1565C0;" />

            <VBox spacing="20" prefWidth="450"
                  style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label text="Placa:" style="-fx-font-weight: bold; -fx-min-width: 100;" />
                    <TextField fx:id="txtPlaca" prefWidth="250" promptText="Ej: ABC123" />
                </HBox>
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label text="Tipo de pago:" style="-fx-font-weight: bold; -fx-min-width: 100;" />
                    <ComboBox fx:id="cbTipoPago" prefWidth="250" promptText="Seleccione...">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Por hora" />
                                <String fx:value="Mensualidad" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </HBox>
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label text="Espacio:" style="-fx-font-weight: bold; -fx-min-width: 100;" />
                    <Spinner fx:id="spEspacio" prefWidth="150" editable="true" />
                </HBox>
                <Button text="REGISTRAR INGRESO" onAction="#registrar"
                        style="-fx-background-color: #2E7D32; -fx-text-fill: white;
                               -fx-font-size: 16px; -fx-font-weight: bold;
                               -fx-pref-width: 300; -fx-pref-height: 50;" />
            </VBox>

            <VBox spacing="15">
                <Label text="Vehículos Actualmente en el Parqueadero"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                <TableView fx:id="tablaActivos" prefHeight="320">
                    <columns>
                        <TableColumn text="Placa" prefWidth="150">
                            <cellValueFactory><PropertyValueFactory property="placa" /></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Hora Ingreso" prefWidth="200">
                            <cellValueFactory><PropertyValueFactory property="ingreso" /></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Espacio" prefWidth="100">
                            <cellValueFactory><PropertyValueFactory property="espacio" /></cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Tipo Pago" prefWidth="140">
                            <cellValueFactory><PropertyValueFactory property="tipoPago" /></cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>