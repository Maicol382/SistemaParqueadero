<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="parqueadero.LoginController"
      alignment="CENTER" spacing="20"
      style="-fx-background-color: #f0f4f8;">
    <padding>
        <Insets top="80" right="50" bottom="80" left="50"/>
    </padding>

    <Label text="Sistema de Parqueadero"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1565C0;"/>

    <VBox spacing="15" alignment="CENTER" prefWidth="350"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <Label text="Iniciar Sesión" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <TextField fx:id="txtUsuario" promptText="Usuario" prefHeight="40"/>
        <PasswordField fx:id="txtPassword" promptText="Contraseña" prefHeight="40"/>

        <Button text="Ingresar" onAction="#login"
                style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-pref-width: 200; -fx-pref-height: 45; -fx-font-size: 16px;"/>
    </VBox>

    <Label text="© 2025 - Parqueadero Inteligente" style="-fx-text-fill: #666;"/>
</VBox>