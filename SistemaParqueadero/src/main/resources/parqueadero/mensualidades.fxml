<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="parqueadero.MensualidadesController"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:id="root" prefHeight="700.0" prefWidth="1100.0" spacing="20.0">

    <children>
        <HBox alignment="CENTER" spacing="20.0">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                   text="GESTIÓN DE MENSUALIDADES" />
        </HBox>

        <Label fx:id="lblTotalMensualidades"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #27ae60;"
               text="Total Mensualidades: 0" />

        <HBox alignment="CENTER_LEFT" spacing="30.0"
              style="-fx-background-color: #ecf0f1; -fx-background-radius: 10;">
            <padding><Insets bottom="20.0" left="30.0" right="30.0" top="20.0" /></padding>
            <children>
                <VBox spacing="15.0">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Espacio:" />
                    <TextField fx:id="txtEspacio" prefHeight="35.0" prefWidth="100.0" promptText="Ej: 5" />
                </VBox>
                <VBox spacing="15.0">
                    <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Inquilino:" />
                    <TextField fx:id="txtInquilino" prefHeight="35.0" prefWidth="250.0" promptText="Ej: Juan Pérez" />
                </VBox>
                <Button fx:id="btnAgregar" onAction="#agregar"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px;
                               -fx-font-weight: bold; -fx-background-radius: 8;"
                        text="AGREGAR MENSUALIDAD" />
            </children>
        </HBox>

        <VBox spacing="10.0">
            <HBox alignment="CENTER_LEFT">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                       text="MENSUALIDADES REGISTRADAS" />
            </HBox>
            <TableView fx:id="tablaMensualidades" prefHeight="400.0">
                <columns>
                    <TableColumn fx:id="colEspacio" prefWidth="100.0" text="Espacio" />
                    <TableColumn fx:id="colInquilino" prefWidth="400.0" text="Inquilino" />
                </columns>
            </TableView>
        </VBox>

        <HBox alignment="CENTER" spacing="20.0">
            <Button fx:id="btnEliminar" onAction="#eliminar"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-font-weight: bold; -fx-background-radius: 8;"
                    text="ELIMINAR SELECCIONADO" />
            <Button onAction="#volver"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px;
                           -fx-font-weight: bold; -fx-background-radius: 8;"
                    text="VOLVER AL DASHBOARD" />
        </HBox>
    </children>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>